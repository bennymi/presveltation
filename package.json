{
	"name": "svelte-show",
	"version": "0.1.0",
	"private": true,
	"description": "SvelteShow: Create interactive and dynamic presentations and slideshows with Svelte / SvelteKit and Tailwind.",
	"author": "Benedikt Mielke",
	"repository": {
		"type": "git",
		"url": "https://github.com/bennymi/svelte-show.git"
	},
	"bugs": {
		"url": "https://github.com/bennymi/svelte-show/issues"
	},
	"homepage": "https://svelte-show.vercel.app/",
	"license": "MIT",
	"keywords": [
		"svelte",
		"tailwind",
		"sveltekit",
		"typescript",
		"revealjs",
		"presentation",
		"presenter",
		"slideshow",
		"powerpoint"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@lottiefiles/lottie-player": "^1.6.3",
		"@sveltejs/adapter-auto": "^1.0.0",
		"@sveltejs/kit": "^1.7.2",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"animate.css": "^4.1.1",
		"autoprefixer": "^10.4.13",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"highlight.js": "^11.7.0",
		"iconify-icon": "^1.0.2",
		"postcss": "^8.4.21",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"prettier-plugin-tailwindcss": "^0.2.2",
		"scroll-into-view-if-needed": "^3.0.4",
		"svelte": "^3.54.0",
		"svelte-check": "^2.9.2",
		"svhighlight": "^0.6.5",
		"tailwindcss": "^3.2.4",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^4.0.0",
		"vitest": "^0.25.3"
	},
	"type": "module",
	"dependencies": {
		"svelte-local-storage-store": "^0.4.0"
	}
}
